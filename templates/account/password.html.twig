{% extends 'base.html.twig' %}

{% block title %}Mon mot de passe • La Garde Robe{% endblock %}

{% block hero %}{% endblock %}

{% block content %}

    <section class="account section">

        <h1 class="section__title">Modifier mon mot de passe</h1>

        <div class="account__container grid">

            <div class="account__data">
                <div class="account__data-info">
                    <div class="account__data-title">
                        <h2 class="account__data-titleName">Sécurité avant tout {{ app.user.firstname }},</h2>
                        <h4 class="account__data-titleSubtitle"><i>c'est dans cet espace que vous allez pouvoir modifier votre mot de passe.</i></h4>
                    </div>
                </div>

                <div class="account__data-button">
                    <div class="account__data-buttonBack">
                        <a href="{{ path('account') }}" class="account__data-buttonBackClick">Retour</a>
                    </div>
                </div>
            </div>

            {% if notification %}
                <div class="section__subtitle">{{ notification }}</div>
            {% endif %}

            <div class="account__data-buttonUpdate">
                {{ form(form) }}
            </div>

        </div>

    </section>

{% endblock %}
