{% extends 'base.html.twig' %}

{% block title %}Ajouter une adresse • La Garde Robe{% endblock %}

{% block hero %}{% endblock %}

{% block content %}

    <section class="account section">

        <h1 class="section__title">Gérer mes adresses</h1>

        <div class="account__container grid">

            <div class="account__data">
                <div class="account__data-info">
                    <div class="account__data-title">
                        <h2 class="account__data-titleName">Mais où êtes vous {{ app.user.firstname }} ?</h2>
                        <h4 class="account__data-titleSubtitle"><i>C'est dans cet espace que vous allez pouvoir ajouter une adresse.</i></h4>
                    </div>
                </div>

                <div class="account__data-button">
                    <div class="account__data-buttonBack">
                        <a href="{{ path('account_address') }}" class="account__data-buttonBackClick">Retour</a>
                    </div>
                </div>
            </div>

            {{ form_start(form) }}
                <div class="account__address-name">
                    {{ form_row(form.name) }}
                </div>
                <div class="account__address-firstname">
                    {{ form_row(form.firstname) }}
                </div>
                <div class="account__address-lastname">
                    {{ form_row(form.lastname) }}
                </div>
                <div class="account__address-company">
                    {{ form_row(form.company) }}
                </div>
                <div class="account__address-address">
                    {{ form_row(form.address) }}
                </div>
                <div class="account__address-postal">
                    {{ form_row(form.postal) }}
                </div>
                <div class="account__address-city">
                    {{ form_row(form.city) }}
                </div>
                <div class="account__address-country">
                    {{ form_row(form.country) }}
                </div>
                <div class="account__address-phone">
                    {{ form_row(form.phone) }}
                </div>
                <div class="account__address-submit">
                    {{ form_row(form.submit) }}
                </div>

            {{ form_end(form) }}

        </div>

    </section>

{% endblock %}
